<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:text="@string/export_uc"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/main_text_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dip"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="15dp"
            android:background="@color/main_decorations" />

        <Button
            android:id="@+id/kmzExportButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/button_indent"
            android:background="@drawable/button_background_drawable"
            android:padding="@dimen/button_indent"
            android:text="@string/kmz"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/main_text_color" />

        <Button
            android:id="@+id/gpxExportButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/button_indent"
            android:background="@drawable/button_background_drawable"
            android:padding="@dimen/button_indent"
            android:text="@string/gpx"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/main_text_color" />

        <Button
            android:id="@+id/cloudExportButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/button_indent"
            android:background="@drawable/button_background_drawable"
            android:padding="@dimen/button_indent"
            android:text="@string/geopap_browser"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/main_text_color" />

        <Button
            android:id="@+id/bookmarksExportButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/button_indent"
            android:background="@drawable/button_background_drawable"
            android:padding="@dimen/button_indent"
            android:text="@string/bookmarks"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/main_text_color" />
    </LinearLayout>
</ScrollView>